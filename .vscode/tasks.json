{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Plaster Template",
            "type" : "shell",
            "command" : "Invoke-Plaster -TemplatePath '${cwd}' -DestinationPath '${cwd}\\Modules' -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}